#!/bin/bash

CWD=$(pwd)

LIB_DIR=$CWD/lib/

ZK_LIST=locahost:2181

export HADOOP_USER_CLASSPATH_FIRST=true
export HADOOP_CLASSPATH=lib/*:conf/

for i in `ls lib/`;
do
    export JARS="$JARS,$i"
done

hadoop jar lib/dga-giraph-0.0.1.jar com.soteradefense.dga.DGAYarnRunner $LIB_DIR "${@:1}" -yj "$JARS" -Dmapred.job.tracker=yarnRM -Dgiraph.zkList="$ZK_LIST"
